<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hourRecycler"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginEnd="2dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/minutesRecycler"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginStart="2dp" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignStart="@id/linear"
        android:layout_alignTop="@id/linear"
        android:layout_alignEnd="@id/linear"
        android:background="@drawable/ctp_top_gradient"
        android:visibility="gone" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignStart="@id/linear"
        android:layout_alignEnd="@id/linear"
        android:layout_alignBottom="@id/linear"
        android:background="@drawable/ctp_bottom_gradient"
        android:visibility="gone" />

</RelativeLayout>